.view_box {
  position: fixed;
  width: 100%;
  height: 100%;
  background: #f3f4f5;
}

.view_coupon {
  flex: 1;
  height: 624rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 50rpx;
  background: #fff;
  border-radius: 20rpx;
}

.view_coupon_one {
  width: 100%;
  display: flex;
  justify-content: center;
}

.view_coupon_kuang {
  margin-top: 85rpx;
  width: 580rpx;
  height: 240rpx;
  display: flex;
}

.view_coupon_text {
  color: white;
  width: 40rpx;
  margin:auto;
  line-height: 48rpx;
  font-size: 38rpx;
  
}

.view_coupon_input {
  width: 76%;
  color: #FFB4BB;
  margin: auto 0;
}
.view_coupon_input input{
  width: 350rpx;
  border-bottom: 1px solid white;
  margin: 0 auto;
}

.view_coupon_btn {
  width: 580rpx;
  line-height: 74rpx;
  font-size: 30rpx;
  margin-top: 80rpx;
  background: #fe6f71;
  border-radius: 50rpx;
  color: white;
}

.view_coupon_two {
  width: 100%;
  margin-left: 56rpx;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
}

.view_coupon_two image {
  width: 30rpx;
  height: 30rpx;
}

.view_coupon_two text {
  font-size: 26rpx;
  color: #555;
  margin-left: 6rpx;
}
.showcoupon{
    margin-left: 56rpx;
    font-size: 24rpx;
    color: red;
    margin-top: 10rpx;
}
.showcoupon text{
  font-weight: bold;
}