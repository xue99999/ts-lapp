/* 课程详情 */
@import "../../wxParse/wxParse.wxss";

.inclusion {
  background: #f3f4f5;
}

.view_top {
  width: 100%;
  height: 289rpx;
  background: #fff;
  display: flex;
  overflow: hidden;
}

.view_top_img {
  width: 220rpx;
  height: 220rpx;
  margin: 42.42rpx 49.69rpx 39.39rpx 36.96rpx;
}

.view_top_text_view_all {
  flex: 3;
}

.view_top_text1, .view_top_text2, .view_top_text3 {
