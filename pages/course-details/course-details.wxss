/*简介*/

.course_remark_view {
  width: 100%;
  height: 310.30rpx;
  background: #fff;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.tab-h {
  margin-top: 20rpx;
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  display: flex;
  border-bottom: 1rpx #e8e8e8 solid;
}

.tab-item {
  flex: 1;
  width: 50%;
  display: inline-block;
  text-align: center;
  align-items: center;
  justify-content: cente;
}

.tab-item.active {
  color: #fe6f71;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 130rpx;
  background: #fe6f71;
  position: absolute;
  bottom: 0;
  margin-left: 120rpx;
  border-radius: 16rpx;
  align-items: center;
  justify-content: cente;
}

